{
  "name": "@schuijers/ui",
  "version": "0.0.0",
  "description": "A UI library for modern front-ends, powered by Vue and Tailwind.",
  "license": "MIT",
  "author": "Martijn Schuijers",
  "homepage": "https://codeberg.org/schuijers/schuijers-webstack/packages/ui",
  "repository": {
    "directory": "packages/ui",
    "type": "git",
    "url": "https://codeberg.org/schuijers/schuijers-webstack.git"
  },
  "bugs": {
    "url": "https://codeberg.org/schuijers/schuijers-webstack/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "style": "./dist/styles/index.css",
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": ["dist"],
  "scripts": {
    "build": "unbuild",
    "postbuild": "attw --pack .",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "vue-tsc --noEmit"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "reka-ui": "2.8.0"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@schuijers/eslint-config": "3.0.0",
    "@storybook/vue3": "10.2.4",
    "@vitejs/plugin-vue": "6.0.4",
    "@vue/test-utils": "2.4.6",
    "eslint": "9.39.2",
    "happy-dom": "20.4.0",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "unbuild": "3.6.1",
    "unplugin-vue": "7.1.1",
    "vite": "7.3.1",
    "vitest": "4.0.18",
    "vue": "3.5.27",
    "vue-tsc": "3.2.4"
  },
  "keywords": [
    "component-library",
    "design-system",
    "reka-ui",
    "schuijers",
    "tailwindcss",
    "typescript",
    "vue"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "style": "./dist/styles/index.css"
}
