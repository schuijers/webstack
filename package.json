{
  "private": true,
  "name": "@schuijers/webstack",
  "version": "0.0.0",
  "description": "A modular web tooling and component ecosystem for modern front-end projects",
  "license": "MIT",
  "author": "Martijn Schuijers",
  "homepage": "https://codeberg.org/schuijers/schuijers-webstack",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/schuijers/schuijers-webstack.git"
  },
  "bugs": {
    "url": "https://codeberg.org/schuijers/schuijers-webstack/issues"
  },
  "scripts": {
    "lint": "eslint",
    "lint:semver-ranges": "syncpack lint-semver-ranges",
    "list-mismatches": "syncpack list-mismatches",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@commitlint/types": "20.2.0",
    "@schuijers/eslint-config": "3.0.0",
    "eslint": "9.39.2",
    "fix-tsup-cjs": "1.2.0",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "rimraf": "6.1.2",
    "simple-git-hooks": "2.13.1",
    "syncpack": "13.0.4",
    "tsup": "8.5.1",
    "turbo": "2.7.3",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "nuxt",
    "tailwindcss",
    "vue"
  ],
  "engines": {
    "node": ">=21.0.0"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "packageManager": "pnpm@10.27.0",
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit ${1}",
    "pre-commit": "npx --no-install lint-staged"
  }
}
