{
  "private": true,
  "name": "@schuijers/webstack",
  "version": "0.0.0",
  "description": "A modular web tooling and component ecosystem for modern front-end projects.",
  "license": "MIT",
  "author": "Martijn Schuijers",
  "homepage": "https://github.com/schuijers/webstack",
  "repository": {
    "type": "git",
    "url": "https://github.com/schuijers/webstack.git"
  },
  "bugs": {
    "url": "https://github.com/schuijers/webstack/issues"
  },
  "type": "module",
  "scripts": {
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:semver-ranges": "syncpack lint-semver-ranges",
    "list-mismatches": "syncpack list-mismatches",
    "prepare": "simple-git-hooks",
    "storybook": "pnpm --filter @schuijers/storybook dev",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@changesets/cli": "2.29.8",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@commitlint/types": "20.4.0",
    "@schuijers/eslint-config": "3.0.0",
    "baseline-browser-mapping": "2.9.19",
    "eslint": "9.39.2",
    "fix-tsup-cjs": "1.2.0",
    "jiti": "2.6.1",
    "lint-staged": "16.2.7",
    "rimraf": "6.1.2",
    "simple-git-hooks": "2.13.1",
    "syncpack": "13.0.4",
    "tsup": "8.5.1",
    "turbo": "2.8.3",
    "typescript": "5.9.3"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "nuxt",
    "tailwindcss",
    "vue"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "overrides": {
      "vue": "3.5.27"
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit ${1}",
    "pre-commit": "npx --no-install lint-staged"
  }
}
